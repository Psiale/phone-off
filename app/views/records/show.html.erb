<p id="notice"><%= notice %></p>
<div class="show-page-container">
        <div class="image">
        
        <% @record.groups.each do |group| %>
            <% if group.icon %>
                <div class="user-photo"> <%= image_tag(group.icon) %></div>
            <% else %>
                <div class="user-photo"> <%= image_tag('unnamed.png') %></div>
            <% end %>

        <% end %>
        </div>
        <div class="record-name">
            <div class="record-name-button"><h1><%= @record.name %></h1></div>
        </div>
        <div class="buttons">
            <div class="edit">
                <%= link_to 'Edit', edit_record_path(@record) %>
            </div>
            <div class="back">
                <%= link_to 'Back', records_path %>
            </div>
        </div>
    
        </div>
